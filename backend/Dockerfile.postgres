# Dockerfile para PostgreSQL
FROM postgres:15-alpine

# Variables de entorno para configurar PostgreSQL
ENV POSTGRES_DB=myapp_db
ENV POSTGRES_USER=myapp_user
ENV POSTGRES_PASSWORD=myapp_password

# Puerto por defecto de PostgreSQL
EXPOSE 5432

# Crear directorio para scripts de inicializaci칩n
RUN mkdir -p /docker-entrypoint-initdb.d

# Script de inicializaci칩n opcional (puedes descomentarlo si necesitas configuraci칩n adicional)
# COPY init.sql /docker-entrypoint-initdb.d/

# Configurar el directorio de datos
VOLUME ["/var/lib/postgresql/data"]

